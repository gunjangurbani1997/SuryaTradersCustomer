<?xml version="1.0"?>
    <resources>
    <style parent="Theme.MaterialComponents.Light.DarkActionBar" name="AppTheme">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

   <!-- <style parent="Theme.MaterialComponents.Light.NoActionBar" name="SplashTheme">
        <item name="android:windowBackground">@drawable/suryalogo</item>
    </style>-->

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_arrow</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>
    <style parent="ThemeOverlay.MaterialComponents.Light" name="AppTheme.PopupOverlay"/>
</resources>